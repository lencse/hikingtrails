{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "jsx": "preserve"
    },
    "lib": [
        "dom"
    ],
    "exclude": [
        "build",
        "node_modules",
        "_site"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}
